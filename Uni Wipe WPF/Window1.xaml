                                <Button x:Name="Bt_Save_" Content="Save Data" Grid.Column="1" HorizontalAlignment="Left" Margin="246,111,0,0" VerticalAlignment="Top" Width="75" Click="Bt_Save__Click"/>




                            </Grid>
